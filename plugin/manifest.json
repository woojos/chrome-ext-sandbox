{
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "name": "Grammy",
    "description": "GetResponse Grammy plugin",
    "version": "0.1",
    //"icons": { "128": "icon.png" },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Grammy plugin"
        //"default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "popup.html"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "http://127.0.0.1:8888/*"
    ]
}